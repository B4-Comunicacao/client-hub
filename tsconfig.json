{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "typeRoots": ["./node_modules/@types", "./next-auth.d.ts"],
  "include": [
    "prisma/**/*.ts",
    ".next/types/**/*.ts",
    "next-env.d.ts", "src/**/*"
, "app/_components/ui/skeleton.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}